@model IEnumerable<Websistmedico.Models.CHoras>

@{
    ViewBag.Title = "Pedirhora";
}

<h2>Pedirhora</h2>

 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.especialidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paciente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>


        @if (item.estado == "pendiente")
        {

            <td style="background-color:blue;color:white">@Html.DisplayFor(modelItem => item.hora)</td>
        }
        else
         if (item.estado == "ocupada" )
        {

            <td style="background-color:red;color:white">@Html.DisplayFor(modelItem => item.hora)</td>
        }

        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.especialidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paciente)
        </td>
        <td>
            @Html.ActionLink("Editar", "PedirEdita", new { id=item.id })  
           
        </td>
    </tr>
}

</table>
